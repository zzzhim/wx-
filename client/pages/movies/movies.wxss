@import "./movie-list/movie-list-template.wxss";
@import "./movie-grid/movie-grid-template.wxss";

.container {
    background-color: #f2f2f2;
}

.search { 
    background-color: #f2f2f2;
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: row;
}

.search-img {
    margin: auto 0 auto 20rpx;
}

.search input {
    width: 600rpx;
    height: 100%;
    margin-left: 20rpx;
    font-size: 28rpx;
}

.placeholder {
    font-size: 14px;
    color: #d1d1d1;
    margin-left: 20rpx;
}

.search-panel {
    position: absolute;
    top: 80rpx;
}

.movies-template {
    margin-bottom: 30rpx;
}

.xx-img {
    height: 30rpx;
    width: 30rpx;
    margin: auto 0 auto 10rpx;
}



















