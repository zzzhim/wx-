page {
    height: 100%;
    background-color: #b3d3db;
}

.box {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.user-avatar {
    width: 200rpx;
    height: 200rpx;
    margin-top: 160rpx;
}

.user-avatar + text {
    margin-top: 30rpx;
    font-size: 32rpx;
    font-weight: bold;
}

.user-btn {
    height: 57rpx;
    margin-top: 200rpx;
    padding-right: 20rpx;
    padding-left: 20rpx;
    border-radius: 10rpx;
    border: 1px solid #405f80;
}

.user-btn > text {
    display: block;
    line-height: 57rpx;
}